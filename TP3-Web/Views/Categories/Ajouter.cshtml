@model TP3.Web.ViewModels.AjouterCategoriesVM

<form asp-action="Ajouter" method="post">
    <div class="form-group mb-3">
        <label asp-for="Titre">Nom</label>
        <input asp-for="Titre" class="form-control" />
        <span asp-validation-for="Titre" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Description">Description</label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Ajouter Categorie</button>
</form>