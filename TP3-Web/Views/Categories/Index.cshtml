@model IEnumerable<TP3.Web.ViewModels.ShowCategoriesVM>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th scope="col">Titre</th>
            <th scope="col">Description</th>
            <th scope="col">Nombre de produits associés</th>
            <th scope="col">Supprimer</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var categorie in Model)
        {
            <tr>
                <td><a href="/Categories/Details/@categorie.Id">@categorie.Titre</a></td>
                <td>@categorie.Description</td>
                <td>@categorie.NombreProduits</td>
                <td><a href="/Categories/Supprimer/@categorie.Id"><img width="30px" height="30px" src="/images/delete.png"></a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/Categories/Ajouter">Ajouter une catégorie</a>
